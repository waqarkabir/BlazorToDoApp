@page "/todo"
@rendermode InteractiveServer

<h3>Todo</h3>

<ul>
    @if (todos.Any())
    {

        @foreach (var todo in todos)
        {
            <li>@todo.Title</li>
        }
    }
    else
    {
        <li style="list-style-type:none" class="alert-danger">Currently todos are empty! Enjoy :)</li>
    }
</ul>

@code {
    private List<TodoItem> todos = new();
}
